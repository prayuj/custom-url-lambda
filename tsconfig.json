{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceRoot": "/",
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["./utils/*"],
            "@types": ["./types/index.ts"],
            "@mongoModels/*": ["./models/*"],
        },
        "target": "es2017",
        "outDir": ".build",
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "es2017"
        ],
        "rootDir": "./src",
        "resolveJsonModule": true
    }
}